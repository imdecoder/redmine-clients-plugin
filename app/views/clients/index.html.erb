<% html_title l(:clients_title) -%>

<div class="contextual">
  <%= link_to_if_authorized l(:label_client_new), {:controller => 'clients', :action => 'new', :id => @project}, :class => 'icon icon-add' %>
</div>

<h2>Clients</h2>
<% if !@clients.blank? %>
  <% for client in @clients %>
    <p><%= client.first_name %>, <%= client.last_name %>, <%= client.email %>, <%= client.mobile %>, <%= client.phone %></p>
  <% end %>
<% else %>
  <p>No any client now.</p>
<% end %>
